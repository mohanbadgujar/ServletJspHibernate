<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.bridgelabz.model.Employee" table="HiberCrud">
	<id name="id" type="integer" column="ID">
	<generator class="increment"></generator>
	</id>
	<property name="name" type="string" column="Name"  not-null="true"></property>
	<property name="salary" type="integer" column="Salary" not-null="true"></property>
	<property name="city" type="string" column="City_name" not-null="true"></property>
	<property name="phoneno" type="long" column="Mobile_No" not-null="true"></property>
	</class>
</hibernate-mapping>